#!/bin/bash

FAILURE=
SRC=$(realpath .)

function setup_git_repo() {
  git init --quiet
  git config user.email "tests@example.com"
  git config user.name "Cucumber tests"
  git add .
  git commit -m "Initial commit" --quiet
  git tag v0.0.1
}

function run_test() {
  test=$1
  echo -n ${test##*/}
  workdir=$(mktemp -d)
  cp -R ./tests/fixture $workdir
  pushd $workdir/fixture > /dev/null
  setup_git_repo
  PATH=$PATH:$SRC \
    RELEASE_DATE=2000-01-01 \
    /bin/sh $test \
    > $test.actual.output
  git diff --unified=0 \
    | sed -e '/^index/d' \
    > $test.actual.diff
  popd > /dev/null
  if [ -f $test.expected.diff ]; then
    diff $test.expected.diff $test.actual.diff
  else
    diff $test.expected.output $test.actual.output
  fi
  if [[ $? != 0 ]]; then
    FAILURE="true"
    echo " ðŸ”´"
  else
    echo " âœ…"
  fi
}

if [ $1 ]; then
  # Run a single test
  run_test $(realpath $1)
else
  # Run all tests
  tests=$(realpath tests)
  for test in $tests/*.sh; do
    run_test $test
  done
fi
test -z $FAILURE
